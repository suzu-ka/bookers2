<!-- ユーザー編集 -->

<div class="container mt-3">
<div class="row">
<div class="col-5 mx-auto">

<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %> error(s)
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user do |f| %>
  <div class="form-group">
    <label>Name</label><br>
    <input type="text" class="form-control" name="user[name]" value="<%= @user.name %>">
  </div>

  <div class="form-group">
    <label>Image</label><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label>Introduction</label><br>
    <textarea class="form-control" name="user[introduction]"><%= @user.introduction %></textarea>
  </div>

  <div class="form-group">
  <button class="btn btn-secondary" type="submit">
    Update User
  </button>
  </div>
<% end %>

</div>
</div>
</div>

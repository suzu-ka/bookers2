<!-- ユーザープロフィール -->
<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<table class="table mb-5"><tbody>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
<a class="btn btn-outline-secondary btn-block" href="/users/<%= user.id %>/edit">
  <i class="fas fa-user-cog"></i>
</a>
</div>


<!-- 新規投稿 -->
<h2 class="mt-3">New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %> error(s)
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: book do |f| %>
  <div class="form-group">
    <label>Title</label><br>
    <input type="text" class="form-control" name="book[title]">
  </div>

  <div class="form-group">
    <label>Opinion</label><br>
    <textarea class="form-control" name="book[body]"></textarea>
  </div>

  <div class="form-group">
  <button class="btn btn-success btn-sm" type="submit">
    Create Book
  </button>
  </div>
<% end %>

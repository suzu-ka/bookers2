<!-- 投稿編集 -->

<div class="container mt-3">
<div class="row">
<div class="col-5 mx-auto">

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error(s)
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="form-group">
    <label>Title</label><br>
    <input type="text" class="form-control" name="book[title]" value="<%= @book.title %>">
  </div>

  <div class="form-group">
    <label>Opinion</label><br>
    <textarea class="form-control" name="book[body]"><%= @book.body %></textarea>
  </div>

  <div class="form-group">
    <button class="btn btn-success" type="submit">
      Update Book
    </button>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path %>

</div>
</div>
</div>

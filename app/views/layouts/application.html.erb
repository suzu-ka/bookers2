<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>

          <% if user_signed_in? %><!-- ログインしている場合 -->
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <!-- ホーム -->
              <li><a class="nav-link text-light" href="/users/<%= current_user.id %>">
                <i class="fas fa-home"></i>
                Home
              </a></li>

              <!-- ユーザー一覧 -->
              <li><a class="nav-link text-light" href="/users">
                <i class="fas fa-users"></i>
                Users
              </a></li>

              <!-- 投稿一覧 -->
              <li><a class="nav-link text-light" href="/books">
                <i class="fas fa-book-open"></i>
                Books
              </a></li>

              <!-- ログアウト -->
              <li><a class="nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out">
                <i class="fas fa-sign-out-alt"></i>
                Log out
              </a></li>

            </ul>
          </div>
          <% else %><!-- ログインしていない場合 -->
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <!-- ホーム -->
              <li><a class="nav-link text-light" href="/">
                <i class="fas fa-home"></i>
                Home
              </a></li>

              <!-- About -->
              <li><a class="nav-link text-light" href="/home/about">
                <i class="fas fa-link"></i>
                About
              </a></li>

              <!-- 新規登録 -->
              <li><a class="nav-link text-light" href="/users/sign_up">
                <i class="fas fa-user-plus"></i>
                Sign up
              </a></li>

              <!-- ログイン -->
              <li><a class="nav-link text-light" href="/users/sign_in">
                <i class="fas fa-sign-in-alt"></i>
                Log in
              </a></li>
            </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class"row">
          <div class="">
            <p class="text-center">CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
